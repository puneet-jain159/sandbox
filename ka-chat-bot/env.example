# Databricks Knowledge Assistant Chatbot Configuration
# Copy this file to .env and fill in your values

# Databricks Configuration
DATABRICKS_HOST=your-domain.cloud.databricks.com
LOCAL_API_TOKEN=your_personal_access_token_here
MLFLOW_EXPERIMENT_ID=your-mlflow-experiment-id

# Knowledge Assistant Configuration
SERVING_ENDPOINT_NAME=ka-123-endpoint

# Database Configuration (PostgreSQL)
DB_USERNAME=your-username@databricks.com
DB_INSTANCE_NAME=your-instance-name
DB_NAME=databricks_postgres
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret

# Optional: SQLite Database (for migration)
# SQLITE_DB_PATH=chat_history.db

# Optional: Logging Configuration
# LOG_LEVEL=INFO

# Optional: Server Configuration
# HOST=0.0.0.0
# PORT=8000 